<% content_for(:title) do %>
  <%= @video.name %> est sur ManageVideo
<% end %>
<% content_for(:description) do %>
  <%= @video.description %>
<% end %>

<div class="container">
  <h1 class="text-center">Détail d'un montage vidéo</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <h2><%= @video.name %></h2>
      <% if @video.url? %>
        <h5>Catégorie : <%= @video.category %></h5>
        <iframe width="640" height="360" src=<%= @video.url %> frameborder="0" allowfullscreen></iframe>
      <% else %>
        <%= @videdo.file %>
      <% end %>
      <p><strong>Description</strong> : <%= @video.description %></p>
      <p><strong>Réalisation</strong> : <%= @video.realisation %></p>
      <p><strong>Date de réalisation</strong> : <%= @video.date.to_date %></p>


    </div>
  </div>
  <%= link_to "Retour à la liste des vidéos", videos_path %>
</div>
