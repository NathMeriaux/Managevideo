 <div class="container">
<div class="navbar-wagon navbar-wagon-fixed">

    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-item navbar-wagon-brand" do %>
      <i class="fa fa-video-camera" aria-hidden="true"></i> ManageVideo
    <%end%>

  <!--Left Menu -->
  <div class="navbar-wagon-left hidden-xs hidden-sm">
    <div>
      <%= link_to "Corporate", corporate_videos_path, class: "navbar-wagon-item navbar-wagon-link"  %>
    </div>
    <div>
      <%= link_to "Clip", clip_videos_path, class: "navbar-wagon-item navbar-wagon-link"  %>
    </div>
    <div>
      <%= link_to "Concert", concert_videos_path, class: "navbar-wagon-item navbar-wagon-link"  %>
    </div>
    <div>
      <%= link_to "Documentaire", documentaire_videos_path, class: "navbar-wagon-item navbar-wagon-link"  %>
    </div>
  </div>
    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- Button (call-to-action) -->
      <%= link_to "Voir toutes les vidéos", root_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    </div>

    <!-- Dropdown list appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Toutes les vidéos", root_path %></li>
          <li><%= link_to "Corporate", corporate_videos_path %></li>
          <li><%= link_to "Clip", clip_videos_path %></li>
          <li><%= link_to "Concert", concert_videos_path %></li>
          <li><%= link_to "Documentaire", documentaire_videos_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

